{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [],
    "deny": [
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(brew:*)",
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Bash(rm -f:*)",
      "Bash(git remote add:*)",
      "Bash(git remote set-url:*)",
      "Bash(git push:*)",
      "Read(**/.env*)",
      "Edit(**/.env*)",
      "Write(**/.env*)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.git-credentials)",
      "Read(~/.docker/config.json)"
    ]
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/inject-task-context.sh",
            "timeout": 5
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/record-session.sh",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true,
  "statusLine": {
    "type": "command",
    "command": "cat | bash ~/.claude/statusline.sh"
  },
  "teammateMode": "tmux"
}
